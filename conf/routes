# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index


GET        /podcasts            controllers.Application.podcaststest

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)


GET        /create              controllers.Application.create
GET        /get/france          controllers.Application.getNodeOfFrance
GET        /get                 controllers.Application.getAllNodes
GET        /delete              controllers.Application.delete
GET        /createUser          controllers.Application.createUser
GET        /getUser             controllers.Application.getUser
GET        /setMailUser         controllers.Application.setMailUser
GET        /setPseudoUser       controllers.Application.setPseudoUser
GET        /setMdpUser          controllers.Application.setMdpUser
GET        /incrNbCoeurs        controllers.Application.incrementerNbCoeurs
GET        /decrNbCoeurs        controllers.Application.decrementerNbCoeurs